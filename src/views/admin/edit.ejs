<%- include('../partials/header.ejs')  %>
<body>
  <section>
      <div class="container">
          <form action="/admin/edit" method="POST">
              <h2 class="mt-4">EDITAR ITEM</h2>
              <div class="row mb-3 mt-4 formulario">

                  <label class=" col-md-1 col-form-label" for="categoria"> Categoría:</label>
                  <div class="col-md-3 ">
                      <select class="form-select" aria-label="Seleccionar" id="categoria" name="categoria">
                          <option selected><%= item.marca %></option>
                          <option value="1">Harry Potter</option>
                          <option value="2">Star wars</option>
                       
                      </select>
                  </div>

                  <label class="col-md-1 col-form-label" for="licencia"> Licencia:</label>
                  <div class="col-md-3">
                      <select class="form-select" aria-label="Licencia" id="licencia" name="licencia">

                          <option selected><%= item.marca %></option>
                          <option value="1">Harry Potter</option>
                          <option value="2">Star wars</option>
                          
                      </select>
                  </div>
              </div>

              <div class="row mb-3 formulario">
                  <label class="col-md-2 col-form-label" for="nombre_producto">Nombre del
                      producto:</label>
                  <div class="col-md-4 ">
                      <input type="text" class="form-control" id="nombre_producto" value=<%= item.nombre %> required>
                  </div>

              </div>

              <div class="row mb-3 formulario">
                  <div class="col-md-8 ">
                      <div class="form-floating">
                          <textarea class="form-control custom-text-area" id="descripcion_producto" style="height: 100px"></textarea>
                          <label class="label__shop" for="descripcion_producto"><%= item.product_description %></label>
                      </div>
                  </div>
              </div>


              <div class="row mb-3 formulario">
                  <label class="col-md-1 col-form-label" for="sku" class="form-label">SKU:</label>
                  <div class="col-md-2 ">
                      <input type="text" class="form-control" id="sku" value=<%= item.SKU %> required>
                  </div>


                  <label class="col-md-1 col-form-label" for="precio" class="form-label">Precio:</label>
                  <div class="col-md-2 ">
                      <input type="text" class="form-control" id="precio" value=<%= item.precio %> required>
                  </div>



                  <label class="col-md-1 col-form-label" for="stock" class="form-label">Stock:</label>
                  <div class="col-md-1 ">
                      <input type="text" class="form-control" id="stock" value=<%= item.stock %> required>
                  </div>
              </div>



              <div class="row mb-3 formulario">
                  <label class="col-md-1 col-form-label" for="descuento" class="form-label">Descuento:</label>
                  <div class="col-md-1 ">
                      <input type="text" class="form-control" id="descuento" value="0%" required>
                  </div>

                  <label class="col-md-1 col-form-label" for="cuotas"> Cuotas</label>
                  <div class="col-md-3">
                      <select class="form-select" aria-label="cuotas" id="cuotas" name="cuotas">

                          <option selected><%= item.cuotas %> Cuotas sin interés</option>
                          <option value="1">6 Cuotas sin interés</option>
                          <option value="2">12 Cuotas sin interés</option>
                          
                      </select>
                  </div>
              </div>

              <div class="row mb-3 formulario">

                  <label for="formFile" class="col-md-1 col-form-label">Imágenes:</label>
                  <div class="col-md-6 ">
                      <input class="form-control justify-content-sm-center" style="border: 0px;" type="file" id="formFile">
                      <img src="/<%= item.images_front %>" alt="Miniatura de la imagen" class="ms-2" style="max-width: 50px;">
                         

                  </div>

                  <div class="row mt-3  d-flex ">

                      <div class="col-md-3 col-sm-4 col-xs-12 col-lg-2 mb-1 ">
                          <button class="boton-ingresar"type="submit">Modificar producto</button>
                      </div>

                  </div>
              </div>
          </div>
         


      </div>
      </form>
  </section>





  <!-- Footer -->
  <%- include('../partials/footer.ejs')  %>
 
</body>



</html>