<%- include('../partials/header.ejs') %>

<body>
  <div class="container">
    <form>
      <div class="col-md-6 pb-4">
        <iconify-icon icon="material-symbols:search"></iconify-icon>
        <input type="text" class="form-control" placeholder="Buscar productos...">
      </div>

      <!-- Título y botón Agregar -->
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="text-uppercase">Listado de Productos</h3>
        <a href="/admin/create">
          <button type="button" class="btn btn-success">Agregar</button>
        </a>
      </div>

      <!-- Títulos de las columnas -->
      <div class="row mt-2 bg-secondary-subtle">
        <div class="col-md-2"><span>ID</span></div>
        <div class="col-md-2"><span>SKU</span></div>
        <div class="col-md-2"><span>Nombre</span></div>
        <div class="col-md-2"><span>Marca</span></div>
        <div class="col-md-2"><span>Acciones</span></div>
      </div>

      <!-- Contenido de las filas -->
      <% articulos.forEach(product => { %>
      <div class="row mt-2 ">
        <div class="col-md-2"><span><%= product.id %></span></div>
        <div class="col-md-2"><span><%= product.SKU %></span></div>
        <div class="col-md-2"><span><%= product.nombre %></span></div>
        <div class="col-md-2"><span><%= product.marca %></span></div>
        <div class="col-md-2">
          <!-- Botones de Modificar y Eliminar -->
         
          <p class="text-danger">Borrar</p>
          <p class="text-primary">Editar</p>
        </div>
      </div>
      <% }); %>

    </form>
  </div>

  <%- include('../partials/footer.ejs') %>
</body>

</html>